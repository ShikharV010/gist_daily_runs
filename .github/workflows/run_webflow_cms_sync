name: Run Webflow CMS Sync Daily 12:00 AM IST

on:
  schedule:
    # 00:00 IST (UTC+5:30) == 18:30 UTC (previous day)
    - cron: '30 18 * * *'
  workflow_dispatch:

concurrency:
  group: webflow-cms-sync
  cancel-in-progress: false

jobs:
  run-notebook:
    runs-on: ubuntu-latest
    timeout-minutes: 60

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install jupyter nbconvert ipykernel pandas sqlalchemy psycopg2-binary requests python-dotenv

      - name: Execute notebook
        run: |
          jupyter nbconvert \
            --to notebook \
            --execute Webflow_cms_sync.ipynb \
            --output Webflow_cms_sync.output.ipynb \
            --ExecutePreprocessor.timeout=3600

      - name: Export HTML (optional)
        run: |
          jupyter nbconvert \
            --to html \
            --output Webflow_cms_sync.output.html \
            Webflow_cms_sync.output.ipynb

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: webflow-cms-sync-output
          path: |
            Webflow_cms_sync.output.ipynb
            Webflow_cms_sync.output.html
